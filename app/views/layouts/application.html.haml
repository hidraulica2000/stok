%html
  %head
    %title Hsc
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %div.navbar.navbar-fixed-top.navbar-inverse
      %div.navbar-inner
        %div.container
          .brand Hidraulic Systems         
                 
          %ul.nav.pull-right
            - if user_signed_in?
                   
            - else
              %li= link_to "Ingresar", new_user_session_path
              %li= link_to "Registrarme", new_user_registration_path
              
    - if flash[:notice]
      .alert.alert-success
        %button.close{"data-dismiss" => "alert", :type => "button"} x
        = flash[:notice]
    - if flash[:alert]
      .alert.alert-error
        %button.close{"data-dismiss" => "alert", :type => "button"} Ã—
        = flash[:alert]
    = yield
